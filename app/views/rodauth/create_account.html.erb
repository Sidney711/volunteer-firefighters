<%= form_with url: rodauth.create_account_path, method: :post, data: { turbo: false }, class: "w-full max-w-sm" do |form| %>
  <div class="mb-6">
    <%= form.label "login", rodauth.login_label, class: "block text-sm font-semibold" %>
    <%= form.email_field rodauth.login_param, value: params[rodauth.login_param], id: "login", autocomplete: "email", required: true, class: "mt-2 text-sm w-full px-3 py-2 border rounded-md disable-dark:bg-gray-900 disable-dark:text-gray-100 disable-dark:focus:bg-gray-800 #{rodauth.field_error(rodauth.login_param) ? "border-red-600 focus:ring-red-600 focus:border-red-600 disable-dark:border-red-400 disable-dark:focus:ring-red-400" : "border-gray-300 disable-dark:border-gray-700 disable-dark:focus:border-emerald-400 disable-dark:focus:ring-emerald-400" }", aria: ({ invalid: true, describedby: "login_error_message" } if rodauth.field_error(rodauth.login_param)) %>
    <%= content_tag(:span, rodauth.field_error(rodauth.login_param), class: "block mt-1 text-red-600 text-xs disable-dark:text-red-400", id: "login_error_message") if rodauth.field_error(rodauth.login_param) %>
  </div>

  <% if rodauth.require_login_confirmation? %>
    <div class="mb-6">
      <%= form.label "login-confirm", rodauth.login_confirm_label, class: "block text-sm font-semibold" %>
      <%= form.email_field rodauth.login_confirm_param, value: params[rodauth.login_confirm_param], id: "login-confirm", autocomplete: "email", required: true, class: "mt-2 text-sm w-full px-3 py-2 border rounded-md disable-dark:bg-gray-900 disable-dark:text-gray-100 disable-dark:focus:bg-gray-800 #{rodauth.field_error(rodauth.login_confirm_param) ? "border-red-600 focus:ring-red-600 focus:border-red-600 disable-dark:border-red-400 disable-dark:focus:ring-red-400" : "border-gray-300 disable-dark:border-gray-700 disable-dark:focus:border-emerald-400 disable-dark:focus:ring-emerald-400" }", aria: ({ invalid: true, describedby: "login-confirm_error_message" } if rodauth.field_error(rodauth.login_confirm_param)) %>
      <%= content_tag(:span, rodauth.field_error(rodauth.login_confirm_param), class: "block mt-1 text-red-600 text-xs disable-dark:text-red-400", id: "login-confirm_error_message") if rodauth.field_error(rodauth.login_confirm_param) %>
    </div>
  <% end %>

  <% if rodauth.create_account_set_password? %>
    <div class="mb-6">
      <%= form.label "password", rodauth.password_label, class: "block text-sm font-semibold" %>
      <%= form.password_field rodauth.password_param, value: "", id: "password", autocomplete: rodauth.password_field_autocomplete_value, required: true, class: "mt-2 text-sm w-full px-3 py-2 border rounded-md disable-dark:bg-gray-900 disable-dark:text-gray-100 disable-dark:focus:bg-gray-800 #{rodauth.field_error(rodauth.password_param) ? "border-red-600 focus:ring-red-600 focus:border-red-600 disable-dark:border-red-400 disable-dark:focus:ring-red-400" : "border-gray-300 disable-dark:border-gray-700 disable-dark:focus:border-emerald-400 disable-dark:focus:ring-emerald-400" }", aria: ({ invalid: true, describedby: "password_error_message" } if rodauth.field_error(rodauth.password_param)) %>
      <%= content_tag(:span, rodauth.field_error(rodauth.password_param), class: "block mt-1 text-red-600 text-xs disable-dark:text-red-400", id: "password_error_message") if rodauth.field_error(rodauth.password_param) %>
    </div>

    <% if rodauth.require_password_confirmation? %>
      <div class="mb-6">
        <%= form.label "password-confirm", rodauth.password_confirm_label, class: "block text-sm font-semibold" %>
        <%= form.password_field rodauth.password_confirm_param, value: "", id: "password-confirm", autocomplete: "new-password", required: true, class: "mt-2 text-sm w-full px-3 py-2 border rounded-md disable-dark:bg-gray-900 disable-dark:text-gray-100 disable-dark:focus:bg-gray-800 #{rodauth.field_error(rodauth.password_confirm_param) ? "border-red-600 focus:ring-red-600 focus:border-red-600 disable-dark:border-red-400 disable-dark:focus:ring-red-400" : "border-gray-300 disable-dark:border-gray-700 disable-dark:focus:border-emerald-400 disable-dark:focus:ring-emerald-400" }", aria: ({ invalid: true, describedby: "password-confirm_error_message" } if rodauth.field_error(rodauth.password_confirm_param)) %>
        <%= content_tag(:span, rodauth.field_error(rodauth.password_confirm_param), class: "block mt-1 text-red-600 text-xs disable-dark:text-red-400", id: "password-confirm_error_message") if rodauth.field_error(rodauth.password_confirm_param) %>
      </div>
    <% end %>
  <% end %>

  <%= form.submit rodauth.create_account_button, class: "w-full px-8 py-3 cursor-pointer font-semibold text-sm rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-600 disable-dark:bg-emerald-400 disable-dark:hover:bg-emerald-500 disable-dark:text-gray-900 disable-dark:focus:ring-emerald-400 disable-dark:focus:ring-offset-current" %>
<% end %>
