<div id="<%= dom_id membership %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= membership.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Fire department:</strong>
    <%= FireDepartment.find(membership.fire_department_id).name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Account:</strong>
    <%= Account.find(membership.account_id).full_info %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Role:</strong>
    <%= membership.role %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= membership.status %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this membership", membership, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this membership", edit_membership_path(membership), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>