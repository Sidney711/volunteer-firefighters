<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <div class="flex justify-between items-center mb-5">
    <h1 class="font-bold text-4xl">Memberships</h1>
    <%= link_to "New membership", new_membership_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <%= search_form_for @q do |f| %>
      <%= f.label :account_full_name_cont, 'Search by Full Name' %>
      <%= f.search_field :account_full_name_cont %>

      <%= f.label :fire_department_id_eq, 'Filter by Fire Department' %>
      <%= f.select :fire_department_id_eq, FireDepartment.all.map { |fd| [fd.name, fd.id] }, include_blank: true %>

    <%= f.submit 'Search', class: 'rounded-lg py-2 px-5 bg-blue-600 text-white cursor-pointer' %>
  <% end %>

  <div id="memberships" class="min-w-full">
    <%= render @memberships %>
  </div>
</div>